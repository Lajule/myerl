{plugins, [rebar3_format, rebar3_run]}.

{format, [{files, ["src/*.erl", "test/*.erl"]}]}.

{erl_opts, [debug_info]}.

{deps, [mysql, poolboy, elli, jsx]}.

{shell, [{config, "config/sys.config"},
 {apps, [myerl]}]}.

{relx, [{release, {myerl_release, "0.1.0"},
 [myerl, sasl, poolboy, mysql, jsx, elli]},

 {vm_args, "config/vm.args"},
 {sys_config, "config/sys.config"},

 {dev_mode, true},
 {include_erts, false},

 {extended_start_script, true}]}.
